<!DOCTYPE html>
<html lang="en">

<%= render 'html_header' %>

<body onLoad="password();">

<div class="brand">Quilts By Alicia</div>
<div class="address-bar">Wills Point, TX 75169 | 903.340.0548</div>

<!-- The rest of the page goes below here! -->
<div class="container">
  <div class="row">
      <div id="box" class="box">

        <div class="col-lg-12 text-center">
          <div class="col-lg-6 text-left">
            <h1>Long Arm Quilt</h1><br>
          </div>
        </div>



        <div class="col-lg-12 text-center"> 
        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Phone</th>
              <th>Size</th>
              <th>Batting</th>
              <th>Binding</th>
              <th>Quilting</th>
              <th>Pantograph patterns</th>
              <th>Total</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @long_arms.each do |long_arm| %>
              <tr>
                <td><%= long_arm.name %></td>
                <td><%= long_arm.email %></td>
                <td><%= long_arm.phone %></td>
                <td><%= long_arm.size %></td>
                <td><%= long_arm.batting %></td>
                <td><%= long_arm.binding %></td>
                <td><%= long_arm.quilting %></td>
                <td><%= long_arm.pantograph_patterns %></td>
                <td><%= long_arm.total %></td>
                <td><%= link_to 'Show', long_arm, :class => 'btn btn-default' %></td>
                <td><%= link_to 'Edit', edit_long_arm_path(long_arm), :class => 'btn btn-default' %></td>
                <td><%= link_to 'Destroy', long_arm, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-default' %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to 'New Long arm', new_long_arm_path, :class => 'btn btn-default' %>
      </div>
    </div>
  </div>
</div>