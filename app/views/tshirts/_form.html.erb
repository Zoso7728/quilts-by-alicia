<%= form_for(@tshirt) do |f| %>
  <% if @tshirt.errors.any? %>
    <div id="error_explanation">
     <h2><%= pluralize(@tshirt.errors.count, "error") %> prohibited this tshirt from being saved:</h2> 

      <ul>
      <% @tshirt.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-lg-12 text-center">
    <div class="col-lg-6 text-left">
    <h2>Contact Information</h2>
    </div>
  </div>

  <div class="col-lg-12 text-center">
    <div class="col-lg-3 text-left">
      <%= f.text_field :name, :class => 'form-control', :value => 'Your Name', :onClick => 'this.setSelectionRange(0, this.value.length)' %>
    </div>
    <div class="col-lg-3 text-left">
      <%= f.text_field :email, :value => 'Email Address', :class => 'form-control', :onClick => 'this.setSelectionRange(0, this.value.length)' %>
    </div>
    <div class="col-lg-3 text-left">
      <%= f.telephone_field :phone, :class => 'form-control', :value => 'Phone Number', :onClick => 'this.setSelectionRange(0, this.value.length)' %>
    </div>
  </div>

  <div class="col-lg-12 text-center">
    <div class="col-lg-4 text-left">
      <h2>Size</h2>
    </div>
  </div>

  <div id="small_quilt" class="col-lg-12 text-left" onChange="tshirt_Calculation();">
    <div class="col-lg-3 text-left">
      <%= f.text_field :shirts, :id => 'input', :class => 'form-control', :value => 'Number of T-Shirts', :onClick => 'this.setSelectionRange(0, this.value.length)' %>
    </div>
    <div class="form-group col-lg-3">
      <p class="plane-text">$20 per Shirt</p>
    </div>
  </div>



  <div class="col-lg-12 text-right">
    <div class="form-group col-lg-8"></div>
    <div class="col-lg-2 text-left">
      <p class="title-text"><strong>Total:</strong></p>
    </div>
    <div class="form-group col-lg-1"></div>
  </div>
  <div class="col-lg-12 text-right">
    <div class="form-group col-lg-8"></div>
    <div class="col-lg-2 text-left">
      <%= f.hidden_field(:total) %>
      <p id="total" class="estiment-calculation">$0.00</p>
    </div>
    <div class="col-lg-1 text-right">
      <%= f.submit'Submit', :class => 'btn btn-default' %>
    </div>
  </div>



<% end %>
