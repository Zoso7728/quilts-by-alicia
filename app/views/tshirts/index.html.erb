<!DOCTYPE html>
<html lang="en">

<%= render 'html_header' %>

<body onLoad="password();">

<div class="brand">Quilts By Alicia</div>
<div class="address-bar">Wills Point, TX 75169 | 903.340.0548</div>

<!-- The rest of the page goes below here! -->
<div class="container">
  <div class="row">
    <div id="box" class="box">

      <div class="col-lg-12 text-center">
        <div class="col-lg-6 text-left">
          <h1>T-Shirt Quilt</h1><br>
        </div>
      </div>

      <div class="col-lg-12 text-center">
        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Phone</th>
              <th>Shirts</th>
              <th>Total</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @tshirts.each do |tshirt| %>
              <tr>
                <td><%= tshirt.name %></td>
                <td><%= tshirt.email %></td>
                <td><%= tshirt.phone %></td>
                <td><%= tshirt.shirts %></td>
                <td><%= tshirt.total %></td>
                <td><%= link_to 'Show', tshirt, :class => 'btn btn-default' %></td>
                <td><%= link_to 'Edit', edit_tshirt_path(tshirt), :class => 'btn btn-default' %></td>
                <td><%= link_to 'Destroy', tshirt, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-default' %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to 'New Tshirt', new_tshirt_path, :class => 'btn btn-default' %>
      </div>

    </div>
  </div>
</div>




</body>

</html>
