<%= form_for(@photo_memory) do |f| %>
  <% if @photo_memory.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@photo_memory.errors.count, "error") %> prohibited this photo_memory from being saved:</h2>

      <ul>
      <% @photo_memory.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div id="space" class="col-lg-12 text-center">
    <div class="col-lg-6 text-left">
    <h2>Contact Information</h2>
    </div>
  </div>

  <div class="col-lg-12 text-center">
    <div class="col-lg-3 text-left">
      <%= f.text_field :name, :class => 'form-control', :value => 'Your Name', :onClick => 'this.setSelectionRange(0, this.value.length)' %>
    </div>
    <div class="col-lg-3 text-left">
      <%= f.text_field :email, :value => 'Email Address', :class => 'form-control', :onClick => 'this.setSelectionRange(0, this.value.length)' %>
    </div>
    <div class="col-lg-3 text-left">
      <%= f.telephone_field :phone, :class => 'form-control', :value => 'Phone Number', :onClick => 'this.setSelectionRange(0, this.value.length)' %>
    </div>
  </div>

  <div class="col-lg-12 text-center">
    <div class="col-lg-4 text-left">
      <h2>Size</h2>
      <%= f.hidden_field(:size) %>
    </div>
  </div>
  <div id="space" class="col-lg-12 text-left">
    <div class="form-group col-lg-1">
      <input type="checkbox" id="but-1" class="btn btn-default" onClick="small();">
    </div>
    <div class="form-group col-lg-2">
      <p class="title-text">Small</p>
    </div>
    <div class="form-group col-lg-3">
      <p class="plane-text">80 x 60 inches</p>
    </div>
    <div class="form-group col-lg-3">
      <p class="plane-text">$450.00</p>
    </div>
  </div>
  <div id="space" class="col-lg-12 text-left">
    <div class="form-group col-lg-1">
      <input type="checkbox" id="but-2" class="btn btn-default" onClick="medium();">
    </div>
    <div class="form-group col-lg-2">
      <p class="title-text">Medium</p>
    </div>
    <div class="form-group col-lg-3">
      <p class="plane-text">120 x 80 inches</p>
    </div>
    <div class="form-group col-lg-3">
      <p class="plane-text">$600.00</p>
    </div>
  </div>
  <div id="space" class="col-lg-12 text-left">
    <div class="form-group col-lg-1">
      <input type="checkbox" id="but-3" class="btn btn-default" onClick="large();">
    </div>
    <div class="form-group col-lg-2">
      <p class="title-text">Large</p>
    </div>
    <div class="form-group col-lg-3">
      <p class="plane-text">160 x 120 inches</p>
    </div>
    <div class="form-group col-lg-3">
      <p class="plane-text">$850.00</p>
    </div>
  </div>

  <div id="space" class="col-lg-12 text-right">
    <div class="col-lg-8 text-right"></div>
    <div class="col-lg-2 text-left">
      <p class="title-text"><strong>Total:</strong></p>
    </div>
    <div class="form-group col-lg-1"></div>
  </div>

  <div class="col-lg-12 text-right">
    <div class="col-lg-8 text-left">
    </div>
    <div class="col-lg-2 text-left">
      <%= f.hidden_field(:total) %>
      <p id="total" class="estiment-calculation">$0.00</p>
    </div>
    <div class="col-lg-1 text-right">
      <%= f.submit'Submit', :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
