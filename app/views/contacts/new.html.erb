<!DOCTYPE html>
<html lang="en">

<%= render 'html_header' %>

    <%= render 'nav' %>

    <div class="container">

        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">Contact
                        <strong>Alicia</strong>
                    </h2>
                    <hr>
                </div>
                <div align="center">

                  <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %> 
                    <%= f.input :name, :required => true %>
                    <%= f.input :email, :required => true %>
                    <%= f.input :message, :as => :text, :required => true %>
                    <div class= "hidden">
                      <%= f.input :nickname, :hint => 'Leave this field blank!' %>
                    </div>
                    <div>
                      </br>
                      <%= f.button :submit, 'Send message', :class=> "btn btn-default" %>
                    </div>
                  <% end %>
                </div>

            </div>
        </div>

    </div>
    <!-- /.container -->

    <%= render 'footer' %>


</body>

</html>
